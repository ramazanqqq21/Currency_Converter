<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="com.ramazan.currencyconverter.viewmodel.ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinnerCurrency1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="Валюта"
            android:textSize="40sp"

            android:layout_margin="10dp"

            app:layout_constraintEnd_toStartOf="@id/spinnerCurrency2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <Spinner
            android:id="@+id/spinnerCurrency2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="Валюта2"
            android:textSize="40sp"
            android:layout_margin="10dp"


            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/spinnerCurrency1"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <View
            android:id="@+id/divider_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/dividerHorizontal"

            app:layout_constraintTop_toBottomOf="@id/spinnerCurrency1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

        <EditText
            android:id="@+id/etSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/divider_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:hint="Введите сумму"
            android:inputType="numberDecimal"
            android:textStyle="bold"

            android:gravity="center"
            android:padding="30dp"
            android:layout_margin="30dp"

            />

        <Button
            android:id="@+id/btnCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Конвертировать"
            android:padding="15dp"
            android:layout_margin="30dp"
            android:gravity="center"

            app:layout_constraintTop_toBottomOf="@id/etSum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <TextView
            android:id="@+id/twResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Результат:"
            android:textSize="30sp"
            android:gravity="start"

            app:layout_constraintTop_toBottomOf="@id/btnCurrency"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_margin="30dp"
            android:padding="15dp"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
